{
  "name": "Copy as Org-Mode",
  "description": "Copy selection or links as Org-mode format text.",
  "version": "0.1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "permissions": ["storage", "contextMenus","activeTab","scripting","notifications","clipboardWrite"],
  "options_ui": {
    "page": "options_ui.html",
    "open_in_tab": true
  },
  "action": {
    "default_title": "Copy as Org-Mode",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/icons/16x.png",
      "32": "/icons/32x.png",
      "48": "/icons/48x.png",
      "128": "/icons/128x.png"
    }
  },
  "icons": {
    "16": "/icons/16x.png",
    "32": "/icons/32x.png",
    "48": "/icons/48x.png",
    "128": "/icons/128x.png"
  }
}
